{
    "name": "git-branch-tabs",
    "displayName": "Git Branch Tabs",
    "description": "Remembers and restores which tabs were opened for each git branch.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.38.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "editors",
        "restore",
        "git",
        "branch",
        "restore",
        "tabs"
    ],
    "activationEvents": [
        "workspaceContains:.git"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Git Branch Tabs configuration",
            "properties": {
                "gitBranchTabs.debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "Specifies debug mode"
                },
                "gitBranchTabs.outputLevel": {
                    "type": "string",
                    "default": "silent",
                    "enum": [
                        "silent",
                        "errors",
                        "verbose"
                    ],
                    "description": "Specifies how much (if any) output will be sent to the RestoreEditors output channel"
                }
            }
        },
        "commands": [
            {
                "command": "gitBranchTabs.clear",
                "title": "Clear Saved Editors"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.12.21",
        "@types/vscode": "^1.38.0",
        "glob": "^7.1.4",
        "mocha": "^6.1.4",
        "typescript": "^3.3.1",
        "tslint": "^5.12.1",
        "vscode-test": "^1.0.2"
    }
}
